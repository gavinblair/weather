<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "G683NP463R.com.ngc.app"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->
  
    <name>WeatherBacon</name>

    <description>
        Weather Bacon. Everything's better with bacon.
    </description>

    <author href="https://www.rtraction.com" email="gavinblair@gmail.com">
        Gavin Blair
    </author>
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="orientation" value="portrait" />
    <access origin="*" subdomains="true" browserOnly="false"/> 
    <icon src="icon.png" width="57" height="57" />
    <icon src="icon2.png" width="114" height="114" />
    <icon src="icon3.png" width="72" height="72" />
    <icon src="icon4.png" width="144" height="144" />

<!--     MediaPlaybackRequiresUserAction: NO
    AllowInlineMediaPlayback: YES
    OpenAllWhitelistURLsInWebView: YES -->
    <gap:plugin name="ChildBrowser" />
    
    <gap:splash src="splash.png" />
    <gap:splash src="Default.png" width="320" height="480" />
    <gap:splash src="Default_at_2x.png" width="640" height="960" />
    <gap:splash src="Default-568h_at_2x.png" width="640" height="1136" />
    <gap:splash src="Default-Landscape_at_2x_ipad.png" width="2048" height="1496" />
    <gap:splash src="Default-Landscape_ipad.png" width="1024" height="748" />
    <gap:splash src="Default-Portrait_at_2x_ipad.png" width="1536" height="2008" />
    <gap:splash src="Default-Portrait_ipad.png" width="768" height="1004" />

</widget>
